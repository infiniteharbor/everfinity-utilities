{
  "compilerOptions": {
    "module": "commonjs",
    "target" : "es5",
    "moduleResolution": "Node",
    "lib": ["es2016","dom"],
    "outDir" : "lib",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration" : true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ]
}